; меню "Not found (search)"
wsnotf:
	db      0       ; hpoint
	db      0       ; vpoint
	db      11100111b
	db      34,16,22,7
	db      white,green
	dw      wsnotfproc
	db      0       ; v
	db      0
	db      1       ; h
	db      6
	dw      standexit
	db      9,5,'[Ok]'

; окно блок - меню редактора DMA
frblock:
	ld      hl,1408h
	ld      de,cyan*256+black
	ld      bc,0b0fh
	jr      set2

; окно под модель поиска
frmodel:
	ld      hl,010eh
	ld      de,red*256+black
	ld      bc,13ch
	jr      set2

; окно под дамп
frdump: ld      hl,0103h
	ld      de,white*256+blue
	ld      bc,0a3fh
	jr      set2

; окно инфо
frcont: ld      hl,040fh
	ld      de,white*256+red
	ld      bc,0b37h
set2:   call    setpar
	jp      setw

; окно меню Save/Load
frsave: ld      hl,1506h                        ; 21,6,23,7
	ld      de,white*256+lightcyan
	ld      bc,717h
	jr      set2

; окно Files
frfiles:
	ld      hl,1e08h                        ; 30,8,20,16
	ld      de,white*256+lightblue
	ld      bc,1014h
	jr      set2

; меню "block menu" редактора DMA
winblock:
	db      0       ; hpoint
	db      0       ; vpoint
	db      11100101b
	db      20,8,15,12
	db      cyan,black
	dw      wblockproc
	db      8       ; v
	db      15
	db      0       ; h
	db      0
	dw      wblockcase
	db      1,2,' mark Begin  '
	db      1,3,' marK last   '
	db      1,4,' Unmark      '
	db      1,5,' shift Right '
	db      1,6,' shift Left  '
	db      1,7,' Inverse     '
	db      1,8,' Fill        '
	db      1,9,' Xor         '

; меню "Write"
wwrite: db      0       ; hpoint
	db      0       ; vpoint
	db      11100101b
	db      19,17,26,5
	db      red,white
	dw      wwriteproc
	db      0       ; v
