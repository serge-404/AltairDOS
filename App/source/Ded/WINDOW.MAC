;        Кроме указанных здесь п/п, есть работа с цветом:

;b1n    - П/П menu     ( цвет меню выбора файлов )

;bsub   - П/П inputstr ( цвет, исп. так же в меню "Change" )

;errors -              ( цвет, исп. в окнах при дисковой ошибке )

;main2  - П/П hlpsub0  ( цвет строки подсказки редактора DMA )
;       - П/П whaM     ( цвет активной части модели )
;       - П/П ctrlon   ( цвет блока в редакторе DMA )

;main   - П/П wfilesp  ( цвет TSG при mark Begin, mark Last )
;       - П/П wsm4     ( цвет выбранного файла для Save/Load )

; кроме этих, есть и др. вызовы работы с цветом, можно найти по вызову setcl.

; Заставка "Welcome ..."
mmw0:
	ld      hl,0a0ah        ; л.в.у. = 10,10
	ld      de,white*256+lightblue ; белые на light синем
	ld      bc,0524h        ; размер
	call    window          ; окно первой заставки
	jp      setw

; "Main menu"
winmain:db      0               ; hpoint
	db      0               ; vpoint
	db      10110101b       ; тип окна
	db      21,6,19,13      ; размеры
	db      white,blue      ; цвет
	dw      mainmess        ; интерьер окна
	db      5               ; число пунктов верт. меню
	db      19              ; их размер
	db      0               ; -""-          гор. меню
	db      0               ; -""-
	dw      maincase
	db      1,2,'  Edit           '
	db      1,4,'  select Disk    '
	db      1,6,'  select User    '
	db      1,8,'  cOnfiguration  '
	db      1,10,'  Quit to dos    '

; Меню "Quit"
winquit:db      1               ; hpoint
	db      0               ; vpoint
	db      11100101b
	db      26,14,18,7
	db      white,red
	dw      wquitstr
	db      0
	db      0
	db      2
	db      7
	dw      wquitcase
	db      4,4,' Yes '
	db      9,4,' No ',0

; Меню "Configuration"
winconf:db      0
	db      0
	db      11100111b
	db      26,12,26,10
	db      white,lightgreen
	dw      wcnfproc
	db      5
	db      18
	db      2
	db      10
	dw      wcnfcase
	db      3,1,' Sound          '
	db      3,2,' keyboard Delay '
	db      3,4,' Name           '
	db      3,5,' Extension      '
	db      3,6,' Unsorted       '

	db      3,8,'[ Ok ]',0,0
	db      15,8,'[Cancel]'

; Меню "Disk"
windsel:db      0
	db      0
	db      11110101b
	db      10,9,17h,5
	db      red,white
	dw      wdselstr
	db      0
	db      0
	db      5
	db      5
	dw      wdselcase
	db      2,2,' A '
	db      6,2,' B '
	db      10,2,' C '
	db      14,2,' D '
	db      18,2,' E '

; Меню "User"
winusel:db      0       ; hpoint
	db      0       ; vpoint
	db      11110001b
	db      15,3,13,18
	db      red,white
	dw      wuselstr
	db      16
	db      13
	db      0
	db      0
	dw      wuselcase
	db      1,1,'  User  0  '
	db      1,2,'  User  1  '
	db      1,3,'  User  2  '
	db      1,4,'  User  3  '
	db      1,5,'  User  4  '
	db      1,6,'  User  5  '
	db      1,7,'  User  6  '
	db      1,8,'  User  7  '
	db      1,9,'  User  8  '
	db      1,10,'  User  9  '
	db      1,11,'  User 10  '
	db      1,12,'  User 11  '
	db      1,13,'  User 12  '
	db      1,14,'  User 13  '
	db      1,15,'  User 14  '
	db      1,16,'  User 15  '

; меню "Editing"
winmedit:db     0       ; hpoint
	db      0       ; vpoint
	db      11110101b
	db      29,10,19,11
	db      black,lightgray
	dw      wmeditstr
	db      4       ; v
	db      19
	db      0       ; h
	db      0
	dw      wmeditcase
	db      1,2,'  All disk       '
	db      1,4,'  Boot - sector  '
	db      1,6,'  Catalog        '
	db      1,8,'  File           '

; меню "Options" (search)
winsearch:
	db      0       ; hpoint
	db      0       ; vpoint
	db      11100111b
	db      29,15,22,10
	db      green,lightgray
	dw      wsearchproc
	db      6       ; v
