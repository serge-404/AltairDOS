	db      1,2,' Forward      '
	db      1,3,' Backward     '
	db      1,4,' ignore Reg.  '
	db      1,5,' ignore Alph. '
	db      1,6,' Edit model   '
	db       2,8,'[Search]'
	db      16,8,'[Ok]',0,0,0,0

; меню "Model found"
wscont:
	db      0       ; hpoint
	db      0       ; vpoint
