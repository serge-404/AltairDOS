	db       6,3,'[Yes]'
	db      16,3,'[No]',0

; меню инфо
wincont:db      0       ; hpoint
	db      0       ; vpoint
	db      10100110b
	db      4,15,55,11
	db      white,black
	dw      wcontproc
	db      0       ; v
	db      0
	db      6       ; h
	db      10
	dw      wcontcase
	db       4,9,'[Edit]',0,0
	db      12,9,'[Up]',0,0,0,0
	db      18,9,'[Down]',0,0
	db      26,9,'[Files]',0
	db      35,9,'[Change]'
	db      45,9,'[Search]'

; меню "Change"
wselect:db      0       ; hpoint
	db      0       ; vpoint
	db      11100111b
	db      19,11,20,11
	db      white,green
	dw      wselectproc
	db      5       ; v
	db      20                ;         1      1
	db      2       ; h       ; 2 4 6 8 0 2 4 67
	db      10                ;        [Cansel]  !
	dw      wselectcase       ;---  1
		  ;  123456789012345678
	db      1,1,' goto Begin       '    ; b   2  1
	db      1,2,' goto End         '    ; e   3  2
	db      1,4,' Track  '    ;---  4
	ds      10,0
	db      1,5,' Sector '    ; t   5  4
	ds      10,0
	db      1,7,' Group  '    ; s   6  5
	ds      10,0
	db      3,9,'[Ok]',0,0,0,0;  o  7
	db      9,9,'[Cancel]'    ; g   8  7

