	jp      nz,error
	ld      a,1
	ld      (wasmsg),a
	call    getnum
	jp      c,error
	call    blank
	inc     hl
	push    bc
	call    getnum
	pop     de              ; d=число
	ld      c,d
	jp      c,error
	call    blank
	inc     hl
	ld      de,(butptr)
	dec     de
	ld      a,c
	ld      (de),a
	inc     de
	ld      a,b
	ld      (de),a
	inc     de
	call    blank
	ld      a,(hl)
	cp      39              ;'
	jp      nz,error
	inc     hl
mvmes:  ld      a,(hl)
	ld      (de),a
	inc     de
	xor     a
	ld      (de),a
	inc     de
	ld      (de),a
	ld      (butptr),de
	inc     de
	ld      (de),a
	ld      (txtptr),de
	dec     de
	dec     de
	ld      a,(hl)
	cp      0dh
	jp      z,error
	cp      39              ;'
	ret     z
	inc     hl
