;
; спец. символы: 0-начало выделенных фраз (для справки)
;  (токены)      1-пустой конец выделенных фраз
;                2-конец выделенной фразы с меткой перехода
;                3-обрамление смысловых фрагментов текста
;                4-конец строки
;                5-конец файла
;
@BEGIN:
	ld      de,(txtptr)
	inc     de
	ld      (txtptr),de
	ld      a,3
	call    codexor
	ld      (de),a
	inc     de
	ld      a,6
	call    codexor
	ld      (de),a
	inc     de
txtloop:ld      a,(hl)
	inc     hl
	cp      0dh
	jr      z,iscr          ; если cr
	cp      1ah
	jp      z,endcomp
	cp      '{'
	jr      z,issko
	cp      '}'
	jr      z,isskz
	cp      '<'
	jr      z,isles
	cp      9
	jr      z,savech
	cp      ' '
	jr      c,txtloop
	jr      z,savech
	ld      b,a
	xor     a
	ld      (skzflag),a
	ld      a,b
savech: call    codexor
	ld      (de),a
	inc     de
	ld      (maxde),de
	ld      a,(qnstr)
	inc     a
	ld      (qnstr),a
	jr      txtloop
;
iscr:   call    inclnct
	ld      a,4
	jr      savech
;
issko:  cp      (hl)
	inc     hl
	jr      z,savech
	dec     hl
	xor     a
	ld      (skzflag),a     ; флаг закрывающей скобки
	jr      savech
;
isskz:  cp      (hl)
	inc     hl
	jr      z,savech
	dec     hl
	ld      (skzaddr),de    ; адр. последней закрывающей
	ld      a,1
	ld      (skzflag),a     ; флаг --"--"--"--"--"--"--
	jr      savech
;
isles:  cp      (hl)
	inc     hl
	jr      z,savech
	dec     hl
	call    getnum
	jp      c,error
	call    blank
	ld      a,(hl)
	cp      '>'
	jp      nz,error
	inc     hl
	ld      a,(skzflag)
	or      a
	ld      a,3
	jr      z,noeosk
	ld      de,(skzaddr)
	dec     a
noeosk: call    codexor
	ld      (de),a
	xor     a
	ld      (skzflag),a
	inc     de
	ld      a,b
	add     a,6             ; не совпадать с токенами
	jr      nc,savech
	jp      error
;
endcomp:ld      a,5
	call    codexor
	ld      (de),a          ; конец файла
	ld      hl,(butptr)
	ld      (hl),0
	ld      a,(wasmsg)
	or      a
	jr      nz,endc1
	ld      hl,(msgptr)
	ld      (hl),0
endc1:  ld      de,100h         ; begin
	ld      hl,inpfcb+9
	ld      (hl),'H'
	ldi                     ; (de):=(hl),inc hl,inc de
	ld      (hl),'L'
	ldi                     ; (de):=(hl),inc hl,inc de
	ld      (hl),'P'
	ldi                     ; (de):=(hl),inc hl,inc de
	ld      (hl),0
	ld      d,h
	ld      e,l
	inc     de
	ld      bc,30
	ldir                    ; подготовили fcb
	ld      c,0fh
	ld      de,inpfcb
	xor     a
	ld      (de),a
	push    de
	call    bdos            ; открыть файл
	cp      4
