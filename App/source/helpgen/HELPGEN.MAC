;
; п/п десятичной коррекции -
;       вход :  HL - 16-битное шестнадцатиричное число.
;       выход : DE - 4-значное десятичное число :
;                     (D7..D4; D3..D0; E7..E4; E3..E0)
	ld      de,0
	ld      b,16
cycl:   add     hl,hl
	ld      a,e
	adc     a,e
	daa
	ld      e,a
	ld      a,d
	adc     a,d
	daa
	ld      d,a
	djnz    cycl            ; КОНЕЦ  КОРРЕКЦИИ
	pop     hl
	LD      A,D
	CALL    DOUTF0
	LD      A,D
	CALL    DOUT0F
	LD      A,E
	CALL    DOUTF0
	LD      A,E
	JR      DOUT0F
;
DOUTF0: RRCA
	RRCA
	RRCA
	RRCA
DOUT0F: PUSH    DE
	push    hl
	AND     0FH
	ADD     A,'0'
	ld      c,6
	ld      e,a
	call    bdos
	pop     hl
	pop     de
	ret
