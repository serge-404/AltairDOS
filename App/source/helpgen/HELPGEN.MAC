@MENUW:
	ld      a,(waswin)
	inc     a
	ld      (waswin),a
	ld      de,x1
	call    getnumm
	jr      z,errors
	cp      56
	jr      nc,errors
	ld      de,y1
	call    getnumm
	jr      z,errors
	cp      24
	jr      nc,errors
	ld      de,dx1
	call    getnumm
	ex      de,hl
	ld      hl,x1
	add     a,(hl)
	ex      de,hl
	cp      62
	jr      nc,errors
	ld      de,dy1
	call    getnumm
	ex      de,hl
	ld      hl,y1
	add     a,(hl)
	ex      de,hl
	cp      25
	jr      nc,errors
	ld      de,tc1
	call    getnumm
	cp      16
	jr      nc,errors
	ld      de,bc1
;
getnumm:push    de
	call    getnum
	call    blank           ; (hl)=','
	inc     hl
	pop     de
	jr      c,errors
	ld      a,b
	ld      (de),a
	or      a
	ret
errors: jp      error
;
@TEXTW:
	ld      a,(waswin)
	inc     a
	ld      (waswin),a
	ld      de,x2
	call    getnumm
	jr      z,errors
	cp      56
	jr      nc,errors
	ld      de,y2
	call    getnumm
	jr      z,errors
	cp      24
	jr      nc,errors
	ld      de,dx2
	call    getnumm
	cp      16
	jr      c,errors
	sub     2
	ld      (xcnt),a
	sub     2
	ld      (xsize),a       ; определяем размеры
	ex      de,hl
	ld      hl,x2
	add     a,(hl)
	ex      de,hl
	cp      58
	jr      nc,errors
	ld      de,dy2
	call    getnumm
	cp      7
	jr      c,errors
	sub     2               ; полос прокрутки
	ld      (ycnt),a
	sub     2
	ld      (ysize),a
	ex      de,hl
	ld      hl,y2
	add     a,(hl)
	ex      de,hl
	cp      22
	jr      nc,errors
	ld      de,tc2
	call    getnumm
	cp      16
	jr      nc,errors
	ld      de,bc2
	jr      getnumm
;
@SELECTXT:
	ld      de,tselect
	call    getnumm
	cp      16
	jr      nc,errors
	ret
;
@SELECHAR:
	ld      de,cselect
	call    getnumm
	cp      16
	jp      nc,errors
