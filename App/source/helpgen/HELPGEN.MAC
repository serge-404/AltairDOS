;
; ================================================
; ============ Компилятор HELP'а =================
;
ANALIS: LD      A,(HL)
	CP      0AH
	call    z,inclnct
	LD      A,(HL)
	INC     HL
	CALL    EOF
	JP      Z,error         ; не найдена <0>
	CALL    EOSTR
	JR      Z,ANALIS
	DEC     HL
	PUSH    HL
	CALL    EXEC
	POP     HL
SEARC:  LD      A,(HL)
	INC     HL
	CALL    EOF
	JP      Z,error
	CALL    EOSTR
	JR      NZ,SEARC
	JR      ANALIS
;
EXEC:   CALL    BLANK           ; ПРОПУСК ПРОБЕЛОВ
	LD      A,(HL)
	CP      ';'
	RET     Z
	CALL    GETWORD         ; ПОЛУЧИТЬ СЛОВО
	CALL    BLANK
	PUSH    HL
	LD      DE,TABWORD
	CALL    CPSTR
	EX      (SP),HL
	RET     NZ           ; ЕСЛИ НАЙДЕН, ТО ВЫЗОВ ПО (HL)
	POP     HL
	RET
;
; ВЫДЕЛЯЕТ СЛОВО ИЗ ФРАЗЫ И ПОМЕЩАЕТ ЕГО НА BUFWORD
;
GETWORD:LD      DE,BUFWORD
	LD      C,0
ABF11:  LD      A,(HL)
	CALL    UPCASE
	CP      20H
	RET     Z
	CP      9
	RET     Z
	CALL    EOSTR
	RET     Z
	CP      3DH
	RET     Z
	CP      2CH
	RET     Z
	LD      (DE),A
	INC	HL
	INC	DE
	INC	C
	JR      ABF11
;
; П/П ИЩЕТ В ТАБЛИЦЕ КЛЮЧЕВЫХ СЛОВ СЛОВО , СОВПАДАЮЩЕЕ СО СЛОВОМ В BUFWORD
; ВЫХОД: ЕСЛИ НАЙДЕНО , ТО ВОЗВРАЩ. А=0FFH, Z=FALSE, HL=АДРЕС ПОДПРОГРАММЫ
;        ИНАЧЕ ВОЗВРАЩАЕТ  А=0, Z=TRUE
;
CPSTR:  LD      HL,BUFWORD
	LD      A,(DE)          ; A= ДЛИНА ТАБЛИЧНОГО ОБРАЗЦА
	OR	A
	RET     Z               ; A=0 ЕСЛИ КОНЕЦ ТАБЛИЦЫ
	CP      C               ; C= ДЛИНА СЛОВА В BUFWORD
	INC     DE
	LD      B,A
	JR      NZ,NEXT
ABF56:  LD      A,(DE)
	CP	(HL)
	JR      NZ,NEXT
	INC	DE
	INC	HL
	DJNZ    ABF56
	LD	A,(DE)
	LD	L,A
	INC	DE
	LD	A,(DE)
	LD	H,A
	LD	A,0FFH
	OR	A
	RET
;
NEXT:   INC     DE              ; СЛЕДУЩЕЕ СЛОВО ИЗ ТАБЛИЦЫ
	DJNZ    NEXT
	INC	DE
	INC	DE
	JR      CPSTR
;
EOSTR:  CP      10
	RET     Z
	CP      13
	RET     Z
EOF:    CP      1AH
	RET     Z
	OR      A
	RET
;
; ПРОПУСК ПРОБЕЛОВ
;
BLANK:  LD      A,(HL)
	CP      ' '
	JR      Z,BLANK1
	CP      9
	RET     NZ
BLANK1: INC     HL
	JR      BLANK
