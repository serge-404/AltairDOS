comm3:  ld      a,(key)
	sub     19
	jp      z,copyfl  ;copyfile
	dec     a
	jr      nz,era    ;delete
	ld      a,(ilist)
	or      a
	jr      z,isren   ;rename
	call    copyfl    ;move
	ld      a,(rssort)
	or      a
	ret     z
	call    catro
	dec     a
	ld      a,1
	call    z,setstat
	jr      era
;
isren:  call    catname1        ; hl=file name
	push    hl
	ld      ix,filname      ; de=filter
	ld      de,fcb1
	push    de
	ld      b,12
orfil:  ld      a,(ix)
	cp      '?'
	jr      nz,putchar
	ld      a,(hl)
putchar:ld      (de),a
	inc     ix
	inc     hl
	inc     de
	djnz    orfil
	pop     de
	pop     hl
	push    de
	call    equalx
	pop     hl              ; fcb1=new name
	ret     nz
	call    initfcb
	call    ffirst          ; см. copy3
	cp      4
	jr      nc,notexist

	call    ignor23
	ret     z             ;ignor=1 - выход из копировщика
	inc     a
	jr      z,comm32
	cp      27
	jr      nz,comm33

comm32: ld      hl,renflg
	inc     (hl)
	push    hl
	call    ignore1
	pop     hl
	ld      (hl),0
	ret     z             ;ignor =1 или 1bh - выход из копировщика
	cp      26
	ret     z

comm33: call    efcb

notexist:
	ld      hl,fcb
	push    hl
	ld      de,fcb1
	push    de
	call    ldir16
	push    hl
	call    c1init
	pop     de              ; de=fcb+16
	pop     hl              ; hl=fcb1
	call    ldir16
	pop     de              ; de=fcb
	jp      rename
