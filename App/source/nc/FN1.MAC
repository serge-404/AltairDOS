NOSCR1:
	ld      de,yellow*256+black
	call    setcl
	call    clrscr
	call    lstsys
;
	ld      a,4     ; " Интерьер "
	call    wrkeybar
;                       ; Обнуление: ( в umnsubr )
	xor     a
;       ld      (i4),a  ;    -""-   признака конца файла
;       ld      (i5),a  ;    -""-   максимального номера
			; страницы
	ld      (PageView),a

	call    umnsubr

	ld      de,white*256+black
	call    setcl
	call    cm2
	call    wset8
	ld      hl,101h
	call    gotoxy
	call    superln
	ld      hl,1b01h
	call    gotoxy
	ld      hl,f17ms0
	ld      a,6
	call    wstrng
	call    offwritest
viewms2:db      38,0,' File: ',0
	call    catname1
	call    up
	call    spdel
	dec     hl
	ld      a,(hl)
	inc     hl
	call    wst
	call    wr20h
	call    vdownline

	call    lockoff         ; Снять блокировку вывода символов на экран
	call    gotoendoff      ; Отменить команду Goto End

; "1","стрелка вверх" - page up
; "2","стрелка вниз"  - page down
; "^R"                - scan up
; "^C"                - scan down
; "3"                 - goto home
; "4"                 - goto end file
; "ESC"               - exit
viewrp0:
	ld      hl,102h         ; Установка параметров окна для вывода
	ld      bc,1550h        ; текста файла
	ld      de,yellow*256+black
	call    setpar
	call    setw
	call    clrscr          ; Очистка экрана перед выводом страницы
	call    fillwin

	call    writest
numpage:db      27,'Q',8,27,'Y',32,35,32,'Page:',0
	ld      a,(PageView)
	ld      hl,i5
	cp      (hl)
	jr      c,skipmax
	ld      (hl),a
skipmax:
	inc     a
	call    wrquant         ; Мах номер страницы - 255
	call    writest
numpage0:db     32,27,'Q',6,0
	ld      a,(WORKSCR)
	cp      1
; если вывод файла будет на экране 1,то включить видимый экран 1
	call    z,SETVIS

	call    pushpoint       ; Запись в буфер указателя внутри DMA и номера
				; записи для прямого доступа
nomax:  ld      a,2
	ld      (i14),a         ; Вторая строкa

view1:  ld      l,a
	ld      h,1
	call    gotoxy
	xor     a
	ld      (rssort),a

view2:  call    getchar
	jr      z,endfile
	ld      hl,rssort
	cp      1ah
	jr      z,eoffile
	cp      9
	jr      z,tabulator
	cp      0dh
	jr      z,crcode
others: inc     (hl)
	push    hl

	ld      c,a
	call    getlock         ; lock 1
	ld      a,c
	jr      nz,othlock

	cp      ' '
	push    af
	call    nc,wri1
	pop     af
	call    c,wrlitle
othlock:
	pop     hl
	ld      a,(hl)
	cp      80
	jr      nc,view4
	jr      view2
tabulator:
	ld      a,(hl)
	cp      72
	jr      nc,view4
	or      7
	ld      (hl),a

	call    getlock         ; lock 2
	call    z,wri1
	jr      view2


crcode: call    getchar
	jr      z,endfile
view4:  ld      hl,i14
	inc     (hl)
	ld      a,(hl)
	cp      23
	jr      c,view1

; left   08h
; up     05h
; right  04h
; down   18h  ;коды курсора в CP/M

	call    vkbrd

scan:   ld      hl,Pageview
	inc     (hl)
	or      a               ; key = 5 !!!
	jp      nz,viewrp0      ; Not Page Up

backfv: dec     (hl)            ; Page Up
	jr      z,zeropage
	dec     (hl)
zeropage:xor    a
	ld      (i4),a         ; Сброс признака EOF

xpage:  call    poppoint       ; Восст. указатель DMA и номер записи для преды-

	jp      viewrp0        ; дущей страницы

eoffile:ld      b,a
	ld      a,(eofdetect)
	or      a
	ld      a,b
	jr      z,others

endfile:call    fillwin0
	call    wset8
	call    offwritest
getcms0:db      27,22,27,36h,' End ',27,37h,0
	call    wset6
	call    getalarm
	jp      nz,view3
	ld      a,1
	ld      (i4),a          ; Установка признака EOF
	call    gotoendoff      ; Отменить команду Goto End по достижении
				; конца файла
cycleof:call    vkbrd
	or      a
	jr      nz,cycleof      ; Not Page Up - переход на cycleof
				; Page Up

	call    vdownline

	ld      hl,PageView
	inc     (hl)
	jr      backfv

;
vkbrd:  ld      a,(gotoend)     ; Указатель команды gotoend
	or      a
	jr      z,vkbrdx        ; Переход, если не команда gotoend

;        LD      A,(i4)
;        OR      A
;        JR      NZ,VKBRDX       ; Запрет выполнения команды gotoend, если
				; выведена последняя страница файла

	call    monink

	pop     hl              ; Баланс стека
	or      10h
	cp      34h             ; "4"
	jr      z,scan          ; Продолжать выполнять команду gotoend
	cp      0ffh            ; 0ffh
	jr      z,scan          ; Продолжать выполнять команду gotoend

	call    gotoendoff
	jr      vkbrdx0         ; Иначе вывести текущую страницу

vkbrdx: call    getlock
	jr      z,vkbrd0        ; Если lock открыт, то опрос клавиат.

	call    monink          ; Если lock закрыт, то проверка
	cp      3               ; ^C
	jr      z,vkbrd1        ; или
	cp      12h             ; ^R
	jr      z,vkbrd1
				; иначе
vkbrdx1:pop     hl              ; вывести текущую страницу
vkbrdx0:call    lockoff
	jp      zeropage

vkbrd0: call    readkey
	ld      a,(scancode)
	cp      27
	jp      z,view3         ; esc - конец просмотра

	or      10h
	cp      33h              ; "3" - в начало файла
	jr      nz,nogohome

	call    vdownline
	xor     a               ; номер страницы --> 1
	ld      (PageView),a
	jr      vkbrdx1

nogohome:
	cp      34h              ; "4" - в конец файла
	jr      nz,vkbrd1

	ld      a,(i4)
	OR      A
	JR      NZ,VKBRD0       ; Запрет выполнения команды gotoend, если
				; выведена последняя страница файла
	ld      a,(i5)
	ld      (PageView),a

	call    gotoendon       ; Вкл. индикатор команды goto end
	call    lockon
	pop     hl
	jp      xpage
				; Возвращает 0 , если Page Up
vkbrd1: ld      a,(kr)
	sub     5               ; стрелка вверх \
	jr      z,lockoff       ;                >---> page up
	sub     10              ; "1"           /
	jr      z,lockoff       ;             /
				;           /
	cp      -12             ; ^C
	jr      z,lockon
	sub     3               ; ^R      /
	jr      nz,lockoff


lockon: push    af
	ld      a,1

lockonoff:
	ld      (lock),a
	pop     af
	ret

lockoff:push    af
	xor     a
	jr      lockonoff

getlock:ld      a,(lock)
	or      a
	ret
vdownline:
	call    wset8
	ld      hl,117h
	call    gotoxy
	call    superln
	jp      wset6

gotoendon: ld      a,1
	jr      gotoendx
gotoendoff:
	xor     a
gotoendx:
	ld      (gotoend),a
	ret

; выход из режима VIEW
view3:  ld      a,2
	ld      (dorst),a

	LD      A,(WORKSCR)
	dec     a               ; вывод файла на экран 0 -
	jp      nz,fn14         ; - вывести панели
;
;        XOR     A
	CALL    SELSCR          ; включить АКТИВНЫЙ экран 0
	xor     a
	call    SETVIS          ; включить ВИДИМЫЙ экран 0
	ld      sp,(SPVIEW)
	jp      dorst3
