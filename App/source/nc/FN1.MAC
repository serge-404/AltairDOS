sccn0:  ld      hl,strn
	call    spdel
	push    hl
	call    sumlength
	pop     hl
	dec     hl
	add     a,(hl)
	cp      79
	ret     nc
	push    hl
	ld      hl,sysline
	ld      e,(hl)
	inc     e
	ld      d,0
	add     hl,de
	ex      de,hl
	pop     hl
	push    hl
	ld      c,(hl)
	inc     hl
	ld      b,0
	ldir
	ld      a,' '
