	ld      (exitera),a
	ret
era:    xor     a
	ld      (exitera),a
	call    catro
	dec     a
	jr      nz,era0
	call    ignor23
	jr      z,exera
	inc     a
	jr      z,eraf0
	cp      1bh
	jr      nz,era0

eraf0:  ld      hl,erams0
	call    ignore2
	jr      z,exera
	cp      26
	jr      z,exera

era0:   ld      a,(exitera)
	dec     a
	ret     z
	call    catro
	dec     a
	ld      a,1
	call    z,setstat
	call    c1init
