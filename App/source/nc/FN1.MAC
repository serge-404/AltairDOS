setstat:push    af        ;setstatus Вход в рег. A:
;0 - r/o
;1 - non r/o
;2 - sys
;3 - nonsys
	call    c1init
	call    catro
	dec     a
	call    z,setro
	call    catsys
	dec     a
	call    z,setsys
	pop     af
	ld      hl,setst0
	push    hl
	or      a
	jr      z,setro
	dec     a
	jr      z,resro
	dec     a
