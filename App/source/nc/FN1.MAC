pushpoint:                      ; Запись в буфер указателя внутри DMA и номера
	call    getbufpoint     ; записи для прямого доступа
	ld      de,(fcb+21h)
	ld      (hl),d
	dec     hl
	ld      (hl),e
	dec     hl
	ld      a,(count)
	ld      (hl),a
	ret

poppoint:call   getbufpoint     ; Восст. указатель DMA и номер записи для преды-
	ld      d,(hl)          ; дущей страницы
	dec     hl
	ld      e,(hl)
	ld      (fcb+21h),de
	dec     hl
	ld      a,(hl)
getcharx: ld    (count),a       ; Уст. указателя по A
	ld      hl,(fcb+21h)
	call    seekrec         ; Уст. номера записи по hl
	jp      rbpfcb          ; Прямое чтение из файла

getchar:ld      a,(count)
	rla
	jr      nc,getc0

	call    increc
	xor     a
	call    getcharx
	ld      hl,alarm
	or      (hl)
	jr      z,getcnt
	xor     a               ; Ошибка BDOS или EOF - выход с Z=1
	ret

getcnt:
getc0:  ld      hl,count
	ld      e,(hl)
	inc     (hl)
	ld      d,0
	ld      hl,vvm
	add     hl,de
	or      0ffh
	ld      a,(hl)
	ld      (i1),a
	ret
f170:   ld      a,(i4)
	call    getext1
	call    spdel
	dec     hl
	ld      a,(hl)
	dec     a
	ret     z       ;В имени редактора / вьювера 0 знач. символов - возврат
	inc     hl
	ld      de,sysline+1
	ld      b,1
f171:   ld      a,(hl)
	inc     hl
	cp      '.'
	jr      z,f172
	inc     b
	ld      (de),a
	inc     de
	jr      f171
f172:   ld      a,' '
	ld      (de),a
	ld      a,b
	ld      (sysline),a
	jp      comm40          ;21

