	call    fullwin
	call    dorst3
	call    catname1
	call    iofcb
	inc     a
	ret     z       ; Не открыт файл для VIEW - выход
;
	call    cm2
	ld      (SPVIEW),sp
	LD      A,1
	CALL    SELSCR  ; ВКЛЮЧИТЬ активный ЭКРАН 1
			; ВХОД: РГ.А - НОМЕР ЭКРАНА
			; ВЫХОД: РГ.А - ТЕКУЩИЙ ЭКРАН
	LD      (WORKSCR),A
			; окно установлено на 6/25/80
;       call    writest
;       db      27,'C',3,12
;       db      27,'5'          ; выкл. автоперевод
;       db      27,'Y',38h,20h  ; уст. курсор
;       db      27,'P',20h      ; уст. цвет
