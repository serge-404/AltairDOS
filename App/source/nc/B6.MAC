;***** filt.mac *****
filt:   xor     a
	ld      (shi),a
	ld      (ifilt),a
	inc     a
	ld      (already),a
	call    getquant
	ld      (hl),0
	call    getrealqn
	ret     z
filtcl:
	call    getuser
	push    hl
	ld      a,(ifilt)
	call    getname1
	ld      (elem),hl
	ld      bc,lstatus-lname
	add     hl,bc
	ld      a,(hl)
	ld      c,a
	and     3fh
	pop     hl
	cp      (hl)
	jr      nz,filt1
	ld      a,c             ; проверка hidden
	and     40h
	jr      z,ifnohdd       ; если не hidden
	ld      a,(actpan)
	call    gethidx
	jr      z,filt1         ; если не показывать hidden
ifnohdd:ld      a,(actpan)
	call    getexex
	jr      z,ifnohid       ; если все файлы
	ld      hl,(elem)
	ld      de,9
	add     hl,de           ; hl=расширение файла
	ld      de,runext       ; 'com'
	push    hl
	call    cmpext
	pop     hl              ; hl=расширение файла
	jr      z,ifnohid       ; если СОМ-файл
	ld      de,batext       ; 'bat'
	call    cmpext
	jr      nz,filt1        ; если не ВАТ-файл
ifnohid:call    getfilt
	ld      de,(elem)       ; hl=фильтр, de=имя файла
	call    equalx
	jr      z,filt1         ;если не проходит по фильтру

	ld      hl,lindex-1
	ld      a,(actpan)
	or      a
	jr      z,indexx
	ld      hl,rindex-1         ; hl = lindex or rindex
indexx:                             ; dec hl
	ld      a,(already)
	call    allde1
	ld      a,(ifilt)
	ld      (hl),a
	ld      hl,already
	inc     (hl)
filt1:  call    getrealqn
	ld      hl,ifilt
	inc     (hl)
	ld      b,(hl)
	cp	b
	jp      nz,filtcl
	call    getquant
	ld      a,(already)
	dec	a
	ld      (hl),a
	ret

mini2:  ld      a,(minist)
	add     a,a
	ld      b,a
	ld      a,20
	sub     b
	ret
posxsh2:ld      a,2
	call    dosft
	push    af
	call    getposx
	pop     af
	ld      (hl),a
	ret

comm18: push    hl             ;Вход в hl
	call    mini2
	pop     de
	ld      hl,0
c180:   add     hl,de
	dec     a
	jr      nz,c180
	push    hl
	call    getfirst
	pop     de
	add     a,e
	ld      (hl),a
