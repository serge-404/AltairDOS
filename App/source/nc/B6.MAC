	jr      nc,list10
freelst:pop     bc              ; b=сколько выводить
	ld      a,(clrflag)
	or      a
	ret     z
frlst0: push    bc              ; закрасить остальное место
	push    hl
	call    gotoxy
	ld      a,12
	call    space
	ld      a,24
	call    conouta
	ld      a,10
	call    space
	ld      a,24
	call    conouta
	ld      a,14
	call    space
	pop     hl
	inc     l
	pop     bc
	djnz    frlst0
