list10: ld      a,b
	ld      b,24
	push    af
	push    hl
	call    fullst
	call    getlasty
	pop     de
	ld      (hl),e
	ex      de,hl           ; позиция вывода
	pop     af              ; текущий файл
	inc     a               ; следующий файл
	pop     bc              ; сколько файлов в столбце
	djnz    list0
