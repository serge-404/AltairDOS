godown: call    normal
	call    getpoint
	push    af
	call    getquant
	pop     af
	cp      (hl)
	jr      nc,inver
	call    getposy
	push    af
	call    mini2
	add     a,2
	ld      b,a
	pop     af
	cp      b
	jr      nc,godw1
	call    getposy
	inc     (hl)
	jr      godw0
godw1:  call    getmode
	ld      a,1
	cp      (hl)
	jr      nz,godw2
	call    upsc
	jr      godw0
godw2:  call    getposx
	push    af
	ld      a,27
	call    dosft
	pop     af
	cp      h
	jr      nc,godw3
	call    getposy
	ld      (hl),3
	call    getposx
	add     a,13
	ld      (hl),a
	jr      godw0
godw3:  call    upsc
godw0:  call    getpoint
	inc     (hl)
inver:	jp      inverse

