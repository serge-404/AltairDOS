pfullst:call    getpoint        ; full
;
; п/п печати файла в формате : имя + размер + дата
; Вход: рег. A - номер файла, рег. B - символ-разделитель
;
fullst: push    bc
	call    catname         ; (hl)=имя файла
	call    wrst12          ; увеличивает hl на 12
	pop     af
	push    af
	call    conouta         ; печать символа-разделителя
	ld      a,(hl)          ; status
	inc     hl              ; (hl)=размер файла
	ld      c,(hl)
	inc     hl
	push    hl
	push    af
	ld      h,(hl)
	ld      l,c
	call    wrsize          ; размер файла - 8 символов
	call    wr20h
	pop     af
	and     40h
	ld      c,' '
	jr      z,notsys
	ld      c,'h'
notsys: call    conout          ; отмечать hidden-файлы
	pop     hl
	inc     hl              ; (hl)=дата файла
	pop     af
	call    conouta         ; не портит hl
	push    hl
	call    getdatepr
	pop     hl
	ld      a,14
	jr      nz,tospace
	inc     hl
	ld      a,'.'
	call    wrdate          ; печать дня (2 символа)
	dec     hl
	ld      a,'.'
	call    wrdate1         ; печать месяца
	dec     hl
	ld      a,' '
	call    wrdate1         ; печать дня
	inc     hl
	inc     hl
	ld      a,':'           ; печать часов
	call    wrdate
	ld      a,8             ; печать минут
wrdate: inc     hl
wrdate1:push    af
	push    hl
	ld      h,(hl)
	xor     a               ; десятичная коррекция
	ld      l,a
	ld      b,8
ccycl:  add     hl,hl
	adc     a,a
	daa
	djnz    ccycl           ; КОНЕЦ  КОРРЕКЦИИ
	call    wrbcd
	pop     hl
	pop     af
	jp      conouta

wrpath: call    getuser
wrpath1:call    makepath
	ld      a,(pathpr)
	dec     a
	ret     nz
	ld      a,(path)
	srl     a
	ld      b,a
	ld      a,21
	sub     b
	ld      l,1
	call    gotoch
	call    inv
	ld      hl,path
	ld      a,(hl)
	inc     hl
	call    wst
	jp      norm

