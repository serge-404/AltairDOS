decincall:call  getmarkeds
	ld      c,l
	ld      b,h
	ld      e,a
	inc     hl
	ld      d,(hl)
	ret

;Вход в рег.A (t:byte);
decmarkeds:call catsize
	push    hl
	call    decincall
	ex      de,hl
	pop     de
	and     a
	sbc     hl,de
	jr      decincall0
;Вход в рег.A (t:byte);
incmarkeds:call catsize
	push    hl
	call    decincall
	pop     hl
	add     hl,de
decincall0:
	ld      a,l
	ld      (bc),a
	inc     bc
	ld      a,h
	ld      (bc),a
	ret
;*********** sort *************
;  Везде идет сравнение : строкаFILNAME ? строка(CAT [ RSSORT] )
;  и уст. флажки аналогично :     cp  a ? r
;
cmpext1:ld      de,filname+9
cmpext2:push    de
	call    catname
	pop     de
	ld      bc,9
	add     hl,bc
cmpext: ld      b,3
cmpstr: ld      a,(de)
	cp      (hl)
	ret     nz
	inc     de
	inc     hl
	djnz    cmpstr
	ret                     ;z:=1

intcmp: ld      a,d
	cp      h
	ret     nz
	ld      a,e
	cp      l
	ret

ondate: call    catname
	ld      de,ldate-lname
	add     hl,de
	push    hl
	ld      hl,(elem)
	add     hl,de
	ex      de,hl
	pop     hl
	ld      b,5
	call    cmpstr
	ret     nz
	ld      a,c
	jr      onname
onsize: call    catsize         ; hl=размер ф. текущ. узла
	ld      de,(sizesort)   ; de=размер вставляемого
	ld      a,d
	cp      h
	ret     nz
	ld      a,e
	cp      l
	ret     nz
	ld      a,c
onname: call    catname         ; hl=имя файла текущ. узла
	ld      de,(elem)       ; de=имя вставляемого
	ld      b,8
onname1:ld      a,(de)
	cp      (hl)
	ret     nz
	inc     hl
	inc     de
	djnz    onname1
	ld      b,3             ; пропустить "точку"
onname2:inc     hl
	inc     de
	ld      a,(de)
	cp      (hl)
	ret     nz
	djnz    onname2
	ret
onext:  call    catname         ; hl=имя файла текущ. узла
	push    hl
	ld      a,c
	ld      bc,9
	add     hl,bc
	ex      de,hl           ; de=ext файла текущ. узла
	ld      hl,(elem)
	push    hl
	add     hl,bc           ; hl=ext вставляемого файла
	ld      c,a
	ex      de,hl           ; hl=ext(curr),de=ext(elem)
	exx
	pop     de
	pop     hl
	exx
	ld      b,3
onext1: ld      a,(de)
	cp      (hl)
	ret     nz
	inc     hl
	inc     de
	djnz    onext1
	ld      a,c
	exx
	ld      c,a
	ld      b,8
onext2: ld      a,(de)
	cp      (hl)
	ret     nz
	inc     hl
	inc     de
	djnz    onext2
	ret

sort:   call    getsortng  ;Сортировка "простыми вставками"
	cp      4
	ret     nc
	ld      (rssort),a
	ld      hl,onname       ; по имени
	or      a
	jr      z,lmethod
	ld      hl,onext        ; по расширению
	dec     a
	jr      z,lmethod
	ld      hl,onsize       ; по размеру
	dec     a
	jr      z,lmethod
	call    getdatepr
	ret     nz              ; если нет дат - unsorted
	ld      hl,ondate       ; по дате
lmethod:ld      (sortc0+1),hl
	call    getquant
	cp      2
	ret     c
	ld      (i1sort),a      ; максимум
	ld      a,(method)
	or      a
	ld      a,30h           ; по возрастанию
	jr      z,lmeth1
	ld      a,38h           ; по убыванию
lmeth1: ld      (sortc1),a
	ld      a,2
	ld      (isort),a       ; текущий элемент
sortcal:ld      a,(isort)
	ld      c,a
	call    catname         ; не портит bc
	ld      (elem),hl
	ld      a,(rssort)
	cp      2
	ld      a,c
	call    z,catsize       ; не портит bc
	ld      (sizesort),hl   ; размер файла -> в sizesort
	dec     c

sortc2: ld      a,c
sortc0: call    onname
sortc1: jr      nc,sortec
	dec     c
	jr      nz,sortc2

sortec: call    arrsel2         ; hl=ук-ль на индекс. массив
	push    hl
	ld      a,(isort)
	ld      d,0
	ld      e,a             ; de=номер текущего элемента
	add     hl,de
	ld      a,(hl)
	ld      (count),a
	pop     hl
	inc     c               ;?
	ld      a,c
	ld      b,0
	add     hl,bc           ; hl=ук. на инд. найденного
	push    hl

	ld      a,(isort)
	sub     c
	JR      Z,NOSDV
	ld      c,a
	add     hl,bc
	ld      d,h
	ld      e,l
	dec     hl
	LDDR
NOSDV:  pop     hl
	ld      a,(count)
	ld      (hl),a
	ld      hl,isort
	inc     (hl)
	ld      a,(i1sort)
	cp      (hl)
	jr      nc,sortcal
	ret

upsc:   call    mini2   ;upscroll      18
	ld      (dy),a
	ld      b,a
	push    bc
	ld      a,1
	call    dosft
	pop     bc
	ld      l,3
	ld      c,40
	call    setpar
	call    su1
	ld      a,1
	call    dosft
	ld      a,(dy)
	add     a,2
	ld      l,a
	call    gotoxy
	call    wr0bah
	call    getmode
	jr      nz,upsc0
	call    getpoint
	ld      b,(hl)
	inc     b
	ld      a,(dy)
	neg                     ;cpl
	add     a,b
	push    af
	ld      b,a
	ld      a,(dy)
	neg                     ;cpl
	add     a,b
	call    upscins
	pop     af
	call    upscins
upsc0:  ld      a,40
	call    dosft
	ld      a,(dy)         ;????????
	add     a,2
	ld      l,a
	call    gotoxy
	call    wr0bah
	call    getfirst
	inc     (hl)
	ret
upscins:
	call    catname
	call    wrst12
	jp      wr179

downsc: call    mini2           ;downscroll
	ld      (dy),a
	ld      b,a
	push    bc
	ld      a,1
	call    dosft
	ld      l,3
	pop     bc
	ld      c,40
	call    setpar
	call    sd1
	ld      a,1
	ld      l,3
	call    gotoch
	call    wr0bah
	call    getmode
	jr      nz,downsc0
	ld      a,14
	ld      l,3
	call    gotoch
	call    wr179
	call    getpoint
	ld      b,(hl)
	dec     b
	ld      a,(dy)
	add     a,b
	push    af
	call    upscins
	ld      a,(dy)
	ld      b,a
	pop     af
	add     a,b
	call    catname
	call    wrst12
downsc0:ld      a,40
	ld      l,3
	call    gotoch
	call    wr0bah
	call    getfirst
	dec     (hl)
	call    getlasty
	inc     (hl)
	ret
