        LD      H,D
        LD      L,E
        INC     DE
        LD      BC,7
        LD      (HL),' '
        LDIR
        INC     DE
        LD      HL,RUNEXT
        LD      C,3
        LDIR
        POP     DE
        POP     HL
;
@MOVNAM:LD      (ELMM),DE
        LD      B,8
@FNAM:  LD      A,(HL)
        CP      ','
        RET     Z
        CP      ' '+1
        RET     C
        INC     HL
        CP      '.'
        JR      Z,@FEXT
        CP      '*'
        JR      Z,@FEXT
        LD      (DE),A
        INC     DE
        DJNZ    @FNAM
@FEXT:  PUSH    HL
        LD      HL,(ELMM)
        LD      DE,9
        ADD     HL,DE
        EX      DE,HL
        POP     HL
        LD      B,3
@FEXT1: LD      A,(HL)
        CP      ','
        RET     Z
        CP      ' '+1
        RET     C
        INC     HL
        CP      '.'
        JR      Z,@FEXT1
        CP      '*'
        RET     Z
        LD      (DE),A
        INC     DE
        DJNZ    @FEXT1
        RET
