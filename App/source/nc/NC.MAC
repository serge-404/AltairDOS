;
; ПЕЧАТЬ СООБЩЕНИЯ О ОШИБКЕ
;
ERRORINI:
        LD      DE,ERRSTRI
        CALL    MSG
        LD      A,(LINECNT)
        PUSH    AF
        RRCA
        RRCA
        RRCA
        RRCA
        CALL    ERRINI1
        POP     AF
ERRINI1:AND     0FH
        ADD     A,'0'
        LD      E,A
        LD      C,6
        JP      BDOS
;
; ПОЛУЧЕНИЕ ДВУХ ЧИСЕЛ, ЗАПИСАННЫХ ЧЕРЕЗ ЗАПЯТУЮ И ЗАПИСЬ
; ИХ В МАССИВ ПО DE
;
DOUBLEINT:
        CALL    GETNUM
        RET     C
        LD      A,B
        LD      (DE),A
        INC     DE
        CALL    BLANK
        LD      A,(HL)
        CP      ','
        SCF
        RET     NZ
        INC     HL
        CALL    GETNUM
        LD      A,B
        LD      (DE),A
        DEC     DE
        RET
;
; ПОЛУЧИТЬ ЧИСЛО ИЗ СТРОКИ.
; ВЫХОД : В = ЗНАЧЕНИЕ (0..255)
;         CY = TRUE(C) - ОШИБКА, CY = FALSE(NC) - НОРМАЛЬНО
;
GETNUM: LD      A,(HL)
        INC     HL
        CALL    EOSTR
        SCF
        RET     Z
        CP      ' '+1
        JR      C,GETNUM        ; анализ на пустую строку
        CP      '0'     ; анализ ввода кол-ва блоков
        RET     C
        CP      '9'+1
        CCF
        RET     C

AC90E:  SUB     '0'
        LD      B,A
        LD      A,(HL)
        CALL    EOSTR   ;OR      A
        RET     Z
        CP      ','
        RET     Z
        INC     HL
        CP      '0'
        CCF
        RET     NC      ; ВОЗВРАТ ЕСЛИ <'0'
        CP      '9'+1
        JR      C,CONTIN ; ПЕРЕХОД ЕСЛИ <'9'+1
        CP      '@'
        CCF
        RET
CONTIN: LD      C,A
        LD      A,B
        ADD     A,A
        ADD     A,A     ; A=A*4
        ADD     A,B
        ADD     A,A     ; A=A*10
        ADD     A,C
        JR      AC90E
;
; ЧИТАЕМ ФАЙЛ , ОПИСАТЕЛЬ КОТОРОГО ЗАДАН В (DE), РАЗМЕЩАЯ
; ЕГО В ОЗУ , НАЧИНАЯ С АДРЕСА , ЗАДАННОГО В HL , ПОКА НЕ
; КОНЕЦ ФАЙЛА ИЛИ ПОКА НЕ КОНЧИТСЯ СЧЕТЧИК  В.
;
FREAD:  PUSH    HL
        PUSH    BC
        PUSH    DE
        EX      DE,HL
        LD      C,1AH
        CALL    BDOS            ; УСТ. ПДП
        POP     DE
        PUSH    DE
        LD      C,14H
        CALL    BDOS            ; ПОСЛЕД. ЧТЕНИЕ
        OR      A
        POP     DE
        POP     BC
        POP     HL
        RET     NZ              ; ВОЗВРАТ, ЕСЛИ КОНЕЦ ФАЙЛА
        PUSH    DE
        LD      DE,80H
        ADD     HL,DE
        POP     DE
        DJNZ    FREAD
        RET                     ; ВОЗВРАТ, ЕСЛИ
                                ; КОНЕЦ СЧЕТЧИКА ВС
; чтение nc.set на текущем диске и юзере
findset:ld      a,(setloaded)
        or      a
        ret     nz
        ld      de,SETFCB
        ld      c,15
        call    bdos
        cp      4
        ret     nc
        ld      de,bufword
        ld      c,1ah
        call    bdos    ; set pdp
        ld      c,14h
        ld      de,SETFCB
        call    bdos    ; читать запись из файла
        or      a
        ret     nz      ; выход - пустой файл
        ld      hl,100h
        ld      de,bufword
        ld      b,3
        call    cmpstr
        ret     nz
        ld      hl,bufword+3
        ld      de,begset
        ld      bc,endctrl-begset
        ldir
        ld      a,1
        ld      (setloaded),a
        ret
