FIRSTCHILD:                     ; поиск первого
	LD      C,0
	JR      NEXTCH
NEXTCHILD:                      ; поиск следующего
	LD      C,A             ; A=CURRENT
	LD      B,0
	LD      HL,K
	ADD     HL,BC
	LD      C,(HL)          ; C=OFFSET ПО ВЛОЖЕННОСТИ
NEXTCH: CP      10H
	JR      NC,NOCHILD
	push    af
	ld      a,(actpan)
	or      a
	LD      HL,dirname
	jr      z,lpan
	ld      hl,16*16+dirname
lpan:   pop     af
	LD      B,0
	ADD     HL,BC
	LD      E,A             ; E=CURRENT
	LD      A,10H
	SUB     C
	LD      B,A
NCHILD: INC     HL
	INC     C
	LD      A,(HL)
	CP      E
	JR      Z,ICHILD
	DJNZ    NCHILD
NOCHILD:LD      A,0FFH
	OR      A
	RET
ICHILD: LD      D,0
	LD      HL,K
	ADD     HL,DE
	LD      (HL),C
	XOR     A
	LD      A,C
	RET
