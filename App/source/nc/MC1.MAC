
;***************************************
;******* Makecat sub. 2 - fillcat ******
;***************************************
fillcat:
	call    activ64
	ld      d,0
	ld      e,a
	ld      hl,usrqn
	add     hl,de
	ld      (hl),d          ; d=0
	ld      d,h
	ld      e,l
	inc     de
	ld      bc,15
	ldir
	call    arrsel2         ; hl=index adr.
	push    hl
	ld      (hl),0
	ld      d,h
	ld      e,l
	inc     de
	ld      bc,255
	ldir                    ; инициал. массива масок 256 байт
	pop     ix
	LD      A,(qnf)
	LD      B,A
	ld      hl,readbuf
	xor     a
	ld      (dsk),a
fcatc:  push    bc
	ld      a,(hl)
	cp      16
	jr      nc,mkcat81
	ld      (resmk),a
	push    hl
	pop     iy
	ld      a,(iy+15)
	cp      80h
	jr      nc,mkcat8
	call    mkcatsub

mkcat81:ld      (ix),1          ; поставить флаг "описатель уже рассмотрен"
mkcat8: pop     bc
	ld      de,32
	add     hl,de
	inc     ix              ; след. эл-т в табл. масок
	djnz    fcatc
;
; кусок, выявляющий файлы - призраки
;
	ld      a,(qnf)
	ld      b,a             ; b= кол-во описателей для повторного осмотра
mkcat15:push    bc
	ld      de,-32
	add     hl,de
	dec     ix

	ld      a,(ix)
	or      a
	jr      nz,mkcat16
	ld      a,(hl)
	ld      (resmk),a
	push    hl
	pop     iy
	ld      a,(iy+15)
	cp      80h
	call    z,mkcatsub
mkcat16:
	pop     bc
	djnz    mkcat15
mkexit:
	call    getrealqn
mkex3:
	ld      a,(dsk)
	ld      (hl),a

	ld      hl,realqn
	ld      a,(hl)
	inc     hl
	cp      (hl)
	jr      nc,mkex4
	ld      a,(hl)
mkex4:  inc     a
	call    getname1
	ld      (catbuf),hl
	ex      de,hl
	ld      hl,(bufpoint)
	or      a
	sbc     hl,de           ; hl=bufpoint-catsize
	ld      b,7
div128: srl     h
	rr      l
	djnz    div128
	ld      (sizebuf),hl
	ret

mkcatsub:
	push    hl
	push    hl
	inc     hl
	call    MoveFileExt
	call    activ64
	add     a,(iy)
	ld      d,0
	ld      e,a
	ld      hl,usrqn
	add     hl,de
	inc     (hl)            ; счетчик файлов в юзерах
	ld      l,(iy+12)
	ld      h,d             ; h:=0
	ld      b,7
mkcat10:add     hl,hl
	djnz    mkcat10
	ld      e,(iy+15)
	add     hl,de
	call    MoveSizeSSUN

	pop     de              ; de=описатель файла
masker: call    arrsel2
	push    hl
	pop     iy
	ld      hl,readbuf
	xor     a
	ld      (isort),a
	ld      a,(qnf)
	ld      b,a
mask1:  push    bc
	ld      a,(iy)
	or      a
	jr      nz,mask3

	ld      b,12
	push    de
	push    hl
	call    cmpstr
	jr      nz,mask2
	ld      (iy),1

	ld      hl,isort
	ld      a,(hl)
	or      a
	jr      nz,mask2
	ld      (hl),1
	ld      hl,(curr)
	ld      de,ldate-lname
	add     hl,de
	ex      de,hl           ; de=ldate(куда)

	pop     hl
	push    hl
	ld      bc,16
	add     hl,bc           ; (hl)=дата файла
	ld      c,5
	ldir                    ; переслали даты
mask2:
	pop     hl
	pop     de
mask3:  inc     iy
	ld      bc,32
	add     hl,bc
	pop     bc
	djnz    mask1
	pop     hl
	ret

