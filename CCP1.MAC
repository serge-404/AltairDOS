        LD      C,9
        JR      XBDOS1
;
XBDOS:  PUSH    BC
XBDOS1: PUSH    DE
	push	hl
        CALL    BDOS
	pop	hl
        POP     DE
        POP     BC
        RET
;
; ЧИТАЕМ ФАЙЛ , ОПИСАТЕЛЬ КОТОРОГО ЗАДАН В (DE), РАЗМЕЩАЯ
; ЕГО В ОЗУ , НАЧИНАЯ С АДРЕСА , ЗАДАННОГО В HL , ПОКА НЕ
; КОНЕЦ ФАЙЛА ИЛИ ПОКА НЕ КОНЧИТСЯ СЧЕТЧИК  ВС.
;
FREAD:  PUSH    HL
	PUSH	BC
	PUSH	DE
	EX      DE,HL
	LD      C,1AH
	CALL    BDOS            ; УСТ. ПДП
	POP	DE
	LD      C,14H
	CALL    XBDOS		; ПОСЛЕД. ЧТЕНИЕ
	OR	A
	POP	BC
	POP	HL
	RET     NZ              ; ВОЗВРАТ, ЕСЛИ КОНЕЦ ФАЙЛА
	PUSH	DE
	LD      DE,80H
	ADD	HL,DE
	DEC	BC
	POP	DE
	LD	A,C
	OR	B
	JR      NZ,FREAD
	RET                     ; ВОЗВРАТ, ЕСЛИ
				; КОНЕЦ СЧЕТЧИКА ВС
;
ISEQSP:	CP      ' '+1
	JR      C,ISEQSP1
	CP      '='
	ret
ISEQSP1:xor	a
	ret
;
MKSYSLN:LD      A,(HL)
	INC     HL
	CP      ' '+1
	JR      NC,MKSYSLN
	DEC	HL
; HL указывает на пробел или 0 в буфере (после FileName)
	PUSH    HL
	LD      DE,SYSLINE+1
	LD      BC,0FFH
AC686:	LD	A,(HL)
	LDI
	CALL    EOSTR
	JR	Z,AC68F
	INC	B
	JR	AC686
;
AC68F:	LD	A,B
	LD      (SYSLINE),A
; сформирована SYSLINE с адреса 80h
	POP     HL

	LD      DE,FCB1
	CALL    MAKEFCB ; CY = 1 - нет файла
	LD      DE,FCB1+1
	PUSH	HL
	CALL    CLR_FCB
	POP     HL
; сформирован FCB1 с адреса 5Ch

	LD      DE,FCB2
	CALL    MAKEFCB ; CY = 1 - нет файла
	LD      DE,FCB2+1
; сформировать FCB2 с адреса 6Ch
;
; Если CY=1, то заполнить память начиная с адреса в DE,
; 8+3 пробелами (FileName)
; Заполнить память после FileName 5 нулями.
CLR_FCB:PUSH    DE
	LD      A,' '
	LD      B,11
	CALL    C,LOOP_DE
	POP	DE
	LD      HL,11
	ADD	HL,DE
	EX      DE,HL
	LD      A,0
	LD      B,5
	Jr      LOOP_DE
;
; hl - строка в буфере
; de - fcb
MAKEFCB:PUSH    BC
	PUSH	AF
MF_0:   XOR     A               ; записать 0 по DE (в FCB)
	LD	(DE),A
	LD      A,(HL)          ; взять байт из буфера
	LD      (TMPBUF),HL     ; запомнить адрес по буферу
	OR      A
	JR      Z,FILLFCB       ; строка кончилась - переход
				; на FILLFCB
	INC     HL              ; увеличить адрес по буферу
	call	ISEQSP
	JR      Z,MF_0
; если код из буфера <21h или '=', то цикл на MF_0

	LD      A,(HL)          ; взять след. байт с буфера
	DEC     HL              ; уменьшить адрес по буферу
	CP      ':'
	JR      NZ,SKIP_SD
; если next байт равен ':', то взять текущий байт мз буфера
	LD      A,(HL)		; A=041h, a=061h
	dec	a
	AND     0FH
	inc	a
	LD      (DE),A
; и занести в FCB как номер диска
	INC	HL
	INC	HL
; пропустить номер диска и ':' в буфере

SKIP_SD:LD      A,(HL)          ; взять байт из буфера
	call	ISEQSP
	JR      Z,FILLFCB
; если код из буфера <21h или '=', то переход на FILLFCB

	LD      BC,8FFh
	INC	DE
; переставить DE с номера диска на first байт имени файла
MF_1:   LD      A,(HL)
	CP      '*'
	JR      Z,MF_4
; Если *, то переход на MF_4
	CP      '.'
	JR      Z,MF_2
; Если ., то забить остальную часть FCB_NAME пробелами
	call	ISEQSP
	JR      Z,MF_3
; Если <21h или =, то забить остальную часть FCB_NAME,
; включая данную позицию, пробелами

	LDI
; если байт не равен '*' '.' <21h '=' то занести его в FCB
	DJNZ    MF_1
; цикл в пределах 8 байт (имя файла)

	LD      A,(HL)  ; взять след. байт с буфера
	CP      '.'     ; если '.', то переход на обработку
	JR      Z,MF_EXT; расширения

; если имя файла длиной более 8 символов, то расширение в
; FCB заполнить пробелами
	LD      B,3
	LD      A,' '
	CALL    LOOP_DE

MF_EXIT:POP     AF
	POP	BC
	OR      A               ; CY = 0
	RET
;
XLOOP_DE:
	LD      A,'?'
; заполнить массив длиной reg.B, с адреса DE, кодом reg.A
LOOP_DE:LD      (DE),A
	INC     DE
	DJNZ    LOOP_DE
	RET
;
; заполнить имя и расширение файла в FCB символом '?', CY=1
FILLFCB:LD      B,11
	INC	DE
	CALL    XLOOP_DE

	POP     AF
	POP     BC
	SCF                     ; CY = 1
	RET
;
MF_4:   CALL    XLOOP_DE        ; забить остаток FCB_NAME символом ?,
	INC     HL
	LD      B,3
	LD	A,(HL)
	call	ISEQSP
	JR      Z,FILLQUE	; was: XFILLEXT ; also fill extension with '?' 
; Если <21h или =, то заполнить расширение символом ' '
; и перейти на MF_EXIT, иначе перейтм на MF_EXT
	JR      MF_EXT
;
MF_3:   DEC     HL              ; цб77
MF_2:   LD      A,' '
	CALL    LOOP_DE

; DE указывает на начало расширения в FCB
MF_EXT: LD      BC,3FFH
	INC	HL
ACB81:	LD	A,(HL)
	CP      '*'
	JR      Z,FILLEXT
; Если *, то заполнить расширение символом ? и перейти
; на MF_EXIT, и INC HL (!)

	call	ISEQSP
	JR      Z,XFILLEXT
; Если <21h или =, то заполнить расширение символом ' '
; и перейти на MF_EXIT
	LDI
	DJNZ	ACB81
; если байт не равен '*' <21h '=', то занести его в FCB
	JR      MF_EXIT
;
FILLEXT:INC	HL		; fill the rest with '?'
FILLQUE:CALL    XLOOP_DE
	JR      MF_EXIT
;
XFILLEXT:			; fill the rest with ' '
	LD      A,' '
	CALL    LOOP_DE
	JR      MF_EXIT
