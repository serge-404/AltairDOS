;
FLSIZ	 equ	HIGH SKIPCOM	; size of (loadable area + 100h) in 256b blocks
;
COMFILE:LD      HL,FCB+11
        LD      (HL),'M'
        DEC     HL
        LD      (HL),'O'
        DEC     HL
        LD      (HL),'C'

SKIPCOM:LD      DE,FCB
        LD      C,0FH
        CALL    BDOS
        INC     A
        JP      Z,NOTF_REP
; открыть файл по имени из FCB, если ошибка открытия, то
; переход на NOTF_REP

	LD      HL,TPA
        LD      BC, FLSIZ+FLSIZ-2	; size of loadable area in 128b blocks
	ld	sp, STCKCCP
	LD      DE,TDA03
STCKCCP:PUSH    DE		; return address (WARM sTART)
        LD      DE,FCB
	CALL    FREAD		; загрузка файла, reg.B счетчик длины
        Jr      Z,NOSP_REP
;
AC6CD:  LD      HL,(TMPBUF)
        CALL    MKSYSLN
        LD      DE,TPA		; COM-file start address
        PUSH    DE

        LD      A,(ACTDSK)
SETDMADSK:
        LD      E,A             ; взять акт. диск в reg.E
        LD      C,14
        CALL    BDOS            ; выбрать диск через BDOS
        LD      DE,DMAMEM
        LD      C,1AH
        Jr      xBDOS            ; уст. DMA
