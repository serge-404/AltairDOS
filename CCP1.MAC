;
; ПОЛУЧИТЬ ЧИСЛО ИЗ СТРОКИ.
; ВЫХОД : В = ЗНАЧЕНИЕ (0..255)
;         CY = TRUE(C) - ОШИБКА, CY = FALSE(NC) - НОРМАЛЬНО
;  saves DE
;
GETNUM: LD      A,(HL)
	INC	HL
	CALL    EOSTR
	SCF
	RET	Z
	CP      ' '+1
	JR      C,GETNUM        ; анализ на пустую строку
	CP      '0'     ; анализ ввода кол-ва блоков
	RET     C
	CP      '9'+1
	CCF
	RET     C
;
AC90E:  SUB     '0'
	LD	B,A
	LD	A,(HL)
	OR      A
	RET     Z
	INC     HL
	CP      '0'
	CCF
	RET     NC      ; ВОЗВРАТ ЕСЛИ <'0'
	CP      '9'+1
	JR      C,CONTIN ; ПЕРЕХОД ЕСЛИ <'9'+1
	CP      '@'
	CCF
	RET
CONTIN: LD      C,A
	LD	A,B
	ADD	A,A
	ADD     A,A     ; A=A*4
	ADD     A,B
	ADD     A,A     ; A=A*10
	ADD	A,C
	JR	AC90E
